#!/usr/bin/bash
# Shim to handle KDE only supporting -e
# https://bugs.kde.org/show_bug.cgi?id=459616
args=("${@//-e/--}")
 
# Dolphin integration requires --new-window to function properly
if [[ ! "${args[@]}" =~ "--" && ! "${args[@]}" =~ "-h" && ! "${args[@]}" =~ "-x" ]]; then
        /usr/bin/ptyxis --new-window "${args[@]}"
else
        /usr/bin/ptyxis "${args[@]}"
fi
